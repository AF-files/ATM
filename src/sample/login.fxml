<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<DialogPane fx:controller="sample.LoginController" xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Fill in your account details
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Account Number" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="accnum" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Pin Number" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="pinnum" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
