<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="mainPane" fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
    <top>
        <VBox BorderPane.alignment="BOTTOM_CENTER">
            <Label>BOI</Label>
            <Label fx:id="accNumDisplay">Acc No:</Label>
        </VBox>
    </top>
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Button fx:id="check" GridPane.columnIndex="0" GridPane.rowIndex="0">Check Balance</Button>
            <Button fx:id="withdraw" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#openWithdraw">Withdraw</Button>
            <Button fx:id="lodge" GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#openLodgement">Lodgement</Button>
            <Button fx:id="exit" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="CENTER">Exit</Button>
        </GridPane>
    </center>
</BorderPane>